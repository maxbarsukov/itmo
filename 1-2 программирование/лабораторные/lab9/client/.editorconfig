# https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
max_line_length = 100
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.json]
trim_trailing_whitespace = false
insert_final_newline = false

[COMMIT_EDITMSG]
max_line_length = 0
